<%= form_for (batch) do |f| %>
  <% if batch.errors.any? %>
    <div id="error_explanation">
      <h3>There are <%= batch.errors.count %> issues, please try again:</h3>
      <ol>
      <% batch.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ol>
    </div>
  <% end %>

  <h2>Create a new batch for this product:</h2>

  <div class="field">
    <%= f.hidden_field :product_id, :value => @product.id %>
  </div>

  <div class="field">
    <%= f.hidden_field :active, :value => false %>
  </div>

  <br>
  <br>

  <div class="field">
    <%= f.label :start_date %><br />
    <%= f.date_field :start_date %>
  </div>

  <br>

  <div class="field">
    <%= f.label :end_date %><br />
    <%= f.date_field :end_date %>
  </div>

  <br>

  <div class="field">
    <%= f.label :min_quantity %><br />
    <%= f.number_field :min_quantity %>
  </div>

  <br>

  <div class="actions">
    <div class="button">
      <%= f.submit %>
    </div>
  </div>

<% end %>
<br>
