<%= form_for (batch) do |f| %>
  <% if batch.errors.any? %>
    <div id="error_explanation">
      <h3>There are <%= batch.errors.count %> issues, please try again:</h3>
      <ol>
      <% batch.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ol>
    </div>
  <% end %>

  <div class="field">
    <strong><%= f.label :active %></strong><br />
    <strong><%= f.check_box :active %></strong><br />

  </div>

  <br>
  <div class="field">
    <strong><%= f.label :start_date %></strong><br />
    <%= f.date_field :start_date %>
  </div>
  <br>
  <div class="field">
    <strong><%= f.label :end_date %></strong><br />
    <%= f.date_field :end_date %>
  </div>

  <br>

  <div class="field">
    <strong><%= f.label :min_quantity %></strong><br />
    <%= f.number_field :min_quantity %>
  </div>
  <br>
  <div class="actions">

      <div class="button">
        <strong><%= f.submit %></strong>
      </div>
  </div>
<% end %>
